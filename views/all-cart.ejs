<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>🛒 Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <%- include('partials/header') %>

  <% if (!user) { %>
    <div class="container my-5">
      <div class="alert alert-danger text-center">❌ Please login to view your cart.</div>
      <div class="text-center">
        <a href="/login" class="btn btn-primary">🔐 Login</a>
      </div>
    </div>
  <% } else { %>

    <% if (message) { %>
      <div class="alert alert-warning alert-dismissible fade show m-4" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <div class="container my-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-warning">🛒 Your Cart</h1>
        <div>
        
          <form action="/cart/empty-cart" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">🧹 Empty Cart</button>
          </form>
        </div>
        <a href="/dashboard/home" class="btn btn-secondary">⬅️ Back to Books</a>
      </div>

      <% const validItems = cart.filter(item => item.bookId); %>

      <% if (validItems.length === 0) { %>
        <div class="alert alert-info text-center">🛒 Your cart is empty.</div>
      <% } else { %>
        <div class="row">
          <% validItems.forEach(item => { %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= item.bookId.title %>
                    <span class="badge bg-info text-dark ms-2">x<%= item.quantity %></span>
                  </h5>
                  <h6 class="card-subtitle mb-2 text-muted">$<%= item.bookId.price %></h6>
                  <p class="card-text"><%= item.bookId.description %></p>

                  <form method="POST" action="/cart/remove-from-cart/<%= item.bookId._id %>" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Remove</button>
                  </form>

                  <form method="POST" action="/cart/decrease-quantity/<%= item.bookId._id %>" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">➖</button>
                  </form>

                  <form method="POST" action="/cart/increase-quantity/<%= item.bookId._id %>" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-success">➕</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <hr />
        <div class="text-end">
          <h5 class="text-primary">🛒 Total Items: <%= totalQuantity %></h5>
          <h4 class="text-success">💰 Total Price: $<%= totalPrice.toFixed(2) %></h4>
          
          <!-- زر الدفع -->
          <div class="mt-3">
            <button id="checkout-btn" class="btn btn-success btn-lg">
              💳 Proceed to Checkout
            </button>
          </div>
        </div>
      <% } %>

      <a href="/books/allBooks" class="btn btn-primary btn-lg mt-4">📚 Show Books</a>
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Stripe Checkout Script -->
  <script src="https://js.stripe.com/v3/"></script>
  <script>
    document.getElementById('checkout-btn').addEventListener('click', async function() {
      try {
        // إظهار حالة التحميل
        this.disabled = true;
        this.innerHTML = '⏳ Processing...';
        
        // إنشاء جلسة الدفع
        const response = await fetch('/payment/create-session', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        });
        
        if (!response.ok) {
          throw new Error('Failed to create payment session');
        }
        
        const { sessionId } = await response.json();
        
        // توجيه المستخدم إلى Stripe Checkout
        const stripe = Stripe('<%= stripeKey %>');
        const { error } = await stripe.redirectToCheckout({
          sessionId: sessionId
        });
        
        if (error) {
          throw new Error(error.message);
        }
        
      } catch (error) {
        console.error('Payment error:', error);
        alert('❌ Payment failed: ' + error.message);
        
        // إعادة تعيين الزر
        this.disabled = false;
        this.innerHTML = '💳 Proceed to Checkout';
      }
    });
  </script>
</body>
</html>
