<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>📚 All Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <%- include('partials/header') %>

  <% if (message) { %>
    <div class="alert alert-success alert-dismissible fade show m-4" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-4 text-primary">📚 Book Store</h1>

      <% if (user && user.isAdmin) { %>
        <a href="/books/add-book" class="btn btn-success">➕ Add Book</a>
      <% } %>

      <a href="/dashboard/home" class="btn btn-secondary">⬅️ Back to Home</a>
    </div>

    <div class="row">
      <% books.forEach(book => { %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">$<%= book.price %></h6>
              <p class="card-text"><%= book.description %></p>
              <p class="text-muted">📦 Available: <%= book.stock %> copies</p>

              <% if (user) { %>
                <form method="POST" action="/cart/add-to-cart" class="d-inline">
                  <input type="hidden" name="bookId" value="<%= book._id %>">
                  <button type="submit" class="btn btn-sm btn-outline-primary">Add to Cart</button>
                </form>
              <% } %>

              <% if (user && user.isAdmin) { %>
                <a href="/books/edit-book/<%= book._id %>" class="btn btn-sm btn-outline-warning">✏️ Edit</a>
                <form method="POST" action="/books/delete-book/<%= book._id %>" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-center mt-4">
      <% if (user) { %>
        <a href="/cart/allCart" class="btn btn-success btn-lg">🛒 Show Cart</a>
        <a href="/cart/allCart" class="btn btn-primary btn-lg ms-2">💳 Quick Checkout</a>
      <% } else { %>
        <p class="text-muted">🔒 Login to view your cart.</p>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
